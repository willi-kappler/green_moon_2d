


Use AsRef instead of String / &str:


use std::path::Path;

fn test<T: AsRef<Path>>(p: T) {
    let p2 = p.as_ref();

    println!("Your path: {}", p2.display());
    
}

fn main() {
    test("assets/my_data.bin");
}






Add logging:

use log::{info, error, debug};
use log4rs;




fn main() {


    let file_logger = log4rs::append::file::FileAppender::builder()
        .encoder(Box::new(log4rs::encode::pattern::PatternEncoder::new("{d} {l} - {m}{n}")))
        .build(&kappa1_config.log_filename).unwrap();


    let _log_handle = log4rs::init_config(log_config).unwrap();

}

